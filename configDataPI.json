{
    "system": {
        "server.port": "8080"
    },
    "allowServerStopCtrl": true,
    "formatTimeStamp": "dd-MM-yyyy'T'HH:mm:ss.SZ",
    "validateLocations": true,
    "resources": {
        "historyMaxLen": 20,
        "root": "/home/pi/server",
        "users": {
            "stuart": {"original":"/media/USBHDD1/shares/stuart", "images":"thumbnails/stuart"},
            "shared": {"original":"/media/USBHDD1/shares/shared", "images":"thumbnails/shared"}
        },
        "locations": {
            "logs": "logs",
            "cache": "cache",
            "scripts": "scripts",
            "userData": "cache",
            "audio": "audio"
        }
    },

    "functions": {
        "echoScriptOutput": true,
        "poleForTime": 2000,
        "osTemplates": {
            "linux": "%{scripts}|./%{script}.sh|%{P0}|%{P1}|%{P2}|%{P3}", 
            "win": "%{scripts}|cmd.exe|/c|%{script}.bat %{P0} %{P1} %{P2} %{P3}",
            "mac": "%{scripts}|%{script}.sh %{P0} %{P1} %{P2} %{P3}",
            "unknown": "unknown-OS"
        },
        "commands": {
            "notImplemented": {
                "func": "notImplemented"
            },
            "notScript": {
                "func": "scriptAll",
                "script": "notScript",
                "P0": "",
                "P1": "../"
            },
            "minRcError": {
                "func": "scriptAll",
                "script": "returnCode",
                "P0": "9",
                "P1": "",
                "P2": "",
                "P3": "",
                "minRC": 9
            },
            "ufs": {
                "func": "readFileFromLocation",
                "location": "cache",
                "file": "userFileSizes.log"
            },
            "testtree": {
                "func": "scriptBetween",
                "script": "getDir",
                "P0": "%{scripts}",
                "P1": "",
                "P2": "",
                "P3": ""
            },
            "log": {
                "func": "rsyncLogs",
                "script": "./listFiles",
                "dir": "/logs",
                "id": "log"
            },
            "vol": {
                "func": "extractVolume",
                "script": "./setVolume",
                "$1": "level"
            },
            "getVol": {
                "func": "extractVolume",
                "script": "./getVolume"
            }
        }
    }
}

