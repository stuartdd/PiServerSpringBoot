{
    "system": {
        "poleForTime":200000 ,
        "historyMaxLen":20,
        "css.body.background": "#b2f1b7",
        "css.header.background": "#17663f",
        "css.main.background": "#5df191",
        "css.hilight.background": "#e8f560",
        "css.button.border": "black"
    },
    "logPath": "data\\logs",
    "logName": "PiServer",
    "logLevelBar": 9,
    "allowServerStopCtrl": true,
    "formatTimeStamp": "dd-MM-yyyy'T'HH:mm:ss.SZ",
    "validatePathsOnStartUp": ["thumbs","original","backup","data","logs","cache","scripts","templates","static","audio"],
    "resources": {
        "serverRoot": "C:\\Users\\stuar\\git\\PiServerSpringBoot",
        "users": {
            "stuart": {"name":"Stuart","thumbs":"data\\thumb\\stuart","original":"data\\images\\stuart", "data":"data\\stuart", "backup":"data\\backup\\stuart"},
            "shared": {"name":"Something for everyone","thumbs":"data\\thumb\\shared","original":"data\\images\\shared", "data":"data\\shared", "backup":"data\\backup\\shared"}
        },
        "locations": {
            "logs": "data\\logs",
            "cache": "data\\cache",
            "scripts": "data\\scripts",
            "templates" : "web\\templates",
            "static" : "web\\static",
            "audio": "audio"
        },
        "alias" : {"ufs":"userFileSizes.json"}
    },

    "functions": {
        "echoScriptOutput": true,
        "poleForTime": 2000,
        "osTemplates": {
            "linux": "%{scripts}|./%{scriptName}.sh|%{P0}|%{P1}|%{P2}|%{P3}|%{P4}|%{P5}",
            "win": "%{scripts}|cmd.exe|/c|%{scriptName}.bat %{P0} %{P1} %{P2} %{P3} %{P4} %{P5}",
            "mac": "%{scripts}|%{scriptName}.sh %{P0} %{P1} %{P2} %{P3} %{P4} %{P5}",
            "unknown": "unknown-OS"
        },
        "shellCommands": {
             "ds": {
                 "methodName": "scriptBetween",
                 "scriptName": "diskStatus",
                 "Content-Type" : "application/json; charset=UTF-8"
            },
            "rot": {
                "methodName": "scriptBetween",
                "scriptName": "rotateImage",
                "Content-Type" : "text/plain; charset=UTF-8",
                "P1":"\"%{serverRoot}%{file.separator}%{original}%{file.separator}%{filePath}%{file.separator}%{fileName}\"",
                "P2":"\"%{serverRoot}%{file.separator}%{backup}%{file.separator}%{filePath}%{file.separator}%{fileName}\"",
                "P3":"\"%{fileName}\"",
                "P4":"%{degrees}"
            }
        }
    }
}

