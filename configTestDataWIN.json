{
    "system": {
        "poleForTime":200000 ,
        "historyMaxLen":20,
        "css.body.background": "#b2f1b7",
        "css.header.background": "#17663f",
        "css.main.background": "#5df191",
        "css.hilight.background": "#e8f560",
        "css.button.border": "black"
    },
    "logPath": "data/logs",
    "logName": "PiServer",
    "logLevelBar": 9,
    "allowServerStopCtrl": true,
    "formatTimeStamp": "dd-MM-yyyy'T'HH:mm:ss.SZ",
    "validatePathsOnStartUp": ["thumbs","original","data","logs","cache","scripts","templates","static","audio"],
    "resources": {
        "serverRoot": "",
        "users": {
            "stuart": {"name":"Stuart","thumbs":"data/thumb/stuart","original":"data/images/stuart", "data":"data/stuart"},
            "shared": {"name":"Something for everyone","thumbs":"data/thumb/shared","original":"data/images/shared", "data":"data/shared"},
            "nonuser": {"thumbs":"data/thumb/nonuser","original":"data/images/nonuser", "data":"data/nonuser"},
            "test": {"src":"src"}
        },
        "locations": {
            "logs": "data/logs",
            "cache": "data/cache",
            "scripts": "data/scripts",
            "audio": "audio",
            "templates" : "data/templates",
            "static" : "data/static"
        },
        "alias" : {"ufs":"userFileSizes.json"}
    },

    "functions": {
        "echoScriptOutput": true,
        "poleForTime": 200000,
        "osTemplates": {
            "linux": "%{scripts}|./%{script}.sh %{P0} %{P1} %{P2} %{P3}", 
            "win": "%{scripts}|cmd.exe|/c|%{script}.bat %{P0} %{P1} %{P2} %{P3}",
            "mac": "%{scripts}|%{script}.sh %{P0} %{P1} %{P2} %{P3}",
            "unknown": "unknown-OS"
        },
        "commands": {
            "ds": {
                "func": "scriptBetween",
                "script": "diskStatus",
                "P0" : "%{cache}"
            },
            "rot": {
                "func": "scriptBetween",
                "script": "rotateImage",
                "Content-Type" : "text/plain; charset=UTF-8"
            },
            "notImplemented": {
                "func": "notImplemented"
            },
            "notScript": {
                "func": "scriptAll",
                "script": "notScript",
                "P0": "",
                "P1": "../"
            },
            "minRcError": {
                "func": "scriptAll",
                "script": "returnCode",
                "P0": "9",
                "P1": "",
                "P2": "",
                "P3": "",
                "minRC": 9
            },
            "ufs": {
                "func": "readFileFromLocation",
                "location": "cache",
                "file": "userFileSizes.log"
            },
            "testtree": {
                "func": "scriptBetween",
                "script": "getDir",
                "P0": "%{scripts}",
                "P1": "",
                "P2": "",
                "P3": ""
            },
            "log": {
                "func": "rsyncLogs",
                "script": "./listFiles",
                "dir": "/logs",
                "id": "log"
            },
            "vol": {
                "func": "extractVolume",
                "script": "./setVolume",
                "$1": "level"
            },
            "getVol": {
                "func": "extractVolume",
                "script": "./getVolume"
            }
        }
    }
}

