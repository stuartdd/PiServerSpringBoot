{
    "system": {
        "server.port": "8080"
    },
    "allowServerStopCtrl": true,
    "formatTimeStamp": "dd-MM-yyyy'T'HH:mm:ss.SZ",
    "validateLocations": false,
    "resources": {
        "historyMaxLen": 20,
        "root": "/home/pi/PiServer/web",
        "users": {
            "stuart": {"images":"data/thumb/stuart","original":"data/images/stuart", "data":"data/stuart"},
            "shared": {"images":"data/thumb/shared","original":"data/images/shared", "data":"data/shared"},
            "nonuser": {"images":"data/thumb/nonuser","original":"data/images/nonuser", "data":"data/nonuser"},
            "test": {"src":"src"}
        },
        "locations": {
            "logs": "data/logs",
            "cache": "data/cache",
            "scripts": "data/scripts",
            "thumbnail": "/thumbnails",
            "audio": "src/main/resources/audio"
        }
    },

    "functions": {
        "echoScriptOutput": true,
        "poleForTime": 200000,
        "osTemplates": {
            "linux": "%{scripts}|./%{script}.sh %{P0} %{P1} %{P2} %{P3}", 
            "win": "%{scripts}|cmd.exe|/c|%{script}.bat %{P0} %{P1} %{P2} %{P3}",
            "mac": "%{scripts}|%{script}.sh %{P0} %{P1} %{P2} %{P3}",
            "unknown": "unknown-OS"
        },
        "commands": {
            "ds": {
                "func": "scriptBetween",
                "script": "diskStatus"
            },
            "notImplemented": {
                "func": "notImplemented"
            },
            "notScript": {
                "func": "scriptAll",
                "script": "notScript",
                "P0": "",
                "P1": "../"
            },
            "minRcError": {
                "func": "scriptAll",
                "script": "returnCode",
                "P0": "9",
                "P1": "",
                "P2": "",
                "P3": "",
                "minRC": 9
            },
            "ufs": {
                "func": "readFileFromLocation",
                "location": "cache",
                "file": "userFileSizes.log"
            },
            "testtree": {
                "func": "scriptBetween",
                "script": "getDir",
                "P0": "%{scripts}",
                "P1": "",
                "P2": "",
                "P3": ""
            },
            "log": {
                "func": "rsyncLogs",
                "script": "./listFiles",
                "dir": "/logs",
                "id": "log"
            },
            "vol": {
                "func": "extractVolume",
                "script": "./setVolume",
                "$1": "level"
            },
            "getVol": {
                "func": "extractVolume",
                "script": "./getVolume"
            }
        }
    }
}

